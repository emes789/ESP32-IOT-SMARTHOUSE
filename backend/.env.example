# Smart Home IoT API - Konfiguracja Środowiskowa
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Skopiuj ten plik do .env i uzupełnij wartości

# ═══════════════════════════════════════════════════════════════
# SERWER
# ═══════════════════════════════════════════════════════════════
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ═══════════════════════════════════════════════════════════════
# MONGODB - OVH / Docker
# ═══════════════════════════════════════════════════════════════
# Dla Docker Compose (lokalny kontener):
MONGODB_URI=mongodb://mongo:27017/smart-house-iot

# Dla MongoDB Atlas (backup/migracja):
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/smart-house-iot

# Nazwa bazy danych
MONGODB_DATABASE=smart-house-iot

# ═══════════════════════════════════════════════════════════════
# BEZPIECZEŃSTWO
# ═══════════════════════════════════════════════════════════════
# Klucz API dla urządzeń ESP32 (wygeneruj: openssl rand -hex 32)
ESP32_API_KEY=ZMIEN_NA_BEZPIECZNY_KLUCZ_32_ZNAKOW

# Klucz API dla aplikacji mobilnej Flutter
FLUTTER_API_KEY=ZMIEN_NA_INNY_BEZPIECZNY_KLUCZ

# JWT Secret dla przyszłej autoryzacji użytkowników
JWT_SECRET=BARDZO_TAJNY_KLUCZ_JWT_256_BIT

# ═══════════════════════════════════════════════════════════════
# RATE LIMITING
# ═══════════════════════════════════════════════════════════════
# Maksymalna liczba requestów na okno czasowe
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ═══════════════════════════════════════════════════════════════
# LOGOWANIE
# ═══════════════════════════════════════════════════════════════
LOG_LEVEL=info

# ═══════════════════════════════════════════════════════════════
# CORS - Dozwolone originy
# ═══════════════════════════════════════════════════════════════
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://twoja-domena.ovh
