FROM node:20-alpine

# Metadata
LABEL maintainer="Smart Home IoT Team"
LABEL description="REST API for Smart Home IoT System"

# Ustaw zmienn rodowiskow
ENV NODE_ENV=production

# Utw贸rz katalog aplikacji
WORKDIR /app

# Skopiuj pliki package
COPY package*.json ./

# Zainstaluj zale偶noci (tylko produkcyjne)
RUN npm install --omit=dev && npm cache clean --force

# Skopiuj kod 藕r贸dowy
COPY src/ ./src/

# Utw贸rz u偶ytkownika non-root dla bezpieczestwa
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs

# Zmie waciciela plik贸w
RUN chown -R nodejs:nodejs /app

# Przecz na u偶ytkownika non-root
USER nodejs

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/api/health/live || exit 1

# Start aplikacji
CMD ["node", "src/server.js"]
